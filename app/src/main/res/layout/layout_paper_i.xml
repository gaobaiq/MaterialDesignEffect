<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paper_i"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_paper_i_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_md_i"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_paper_i_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_paper_i_1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:text="纸片I"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_paper_i_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_paper_i_title"
            android:layout_margin="16dp"
            android:text="副标题" />

        <TextView
            android:id="@+id/btn_paper_i_action_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_paper_i_subtitle"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="点击事件1"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btn_paper_i_action_2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_paper_i_subtitle"
            android:layout_toRightOf="@id/btn_paper_i_action_1"
            android:text="点击事件2"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
